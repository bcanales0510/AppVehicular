<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txtTituloMantenimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantenimientos del Vehículo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAgregarMantenimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="➕ Agregar Mantenimiento"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca un mantenimiento para ver más detalles"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <ListView
        android:id="@+id/listViewMantenimientos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:padding="8dp"/>

</LinearLayout>