<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiapp.MainActivity">

    <!-- CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- MAPA -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- INFO VEHÍCULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#F5F5F5">

            <ImageView
                android:id="@+id/imgVehiculo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_car_default"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtVehiculoInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehículo: --"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtEstadoVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: En movimiento"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"/>
            </LinearLayout>

    </LinearLayout>

    </LinearLayout> <!-- cierre del LinearLayout interior -->




</androidx.drawerlayout.widget.DrawerLayout>
